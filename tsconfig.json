{
  "extends": "ts-node/node12/tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": false,
    "files": true,
    "compilerOptions": {
      "module": "commonjs",
    }
  },
  "compilerOptions": {
    "target": "esnext",          
    "module": "esnext",
    "moduleResolution": "node",          
    "resolveJsonModule": true,
    "rootDir": "./",
    "baseUrl": "./",                         
    "paths": {
      "@analyser/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",                      
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "skipLibCheck": true                     
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "__tests__"
  ]
}
